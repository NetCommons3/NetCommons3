<VirtualHost *:80>
	ServerName www.netcommons.local
	ServerAdmin webmaster@localhost

	DocumentRoot /vagrant_data
	<Directory />
		Options FollowSymLinks
		AllowOverride All
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>

<VirtualHost *:80>
	ServerName sphinx.netcommons.local
	ServerAdmin webmaster@localhost

	DocumentRoot /var/www/NetCommons3Docs/sphinx/build/html
	<Directory />
