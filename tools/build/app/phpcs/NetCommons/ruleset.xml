<?xml version="1.0"?>
<ruleset name="NetCommons">
	<description>NetCommons coding standard</description>

	<exclude-pattern>\.git</exclude-pattern>
	<exclude-pattern>*/Config/*.ini.php</exclude-pattern>
	<exclude-pattern>/*/tmp/</exclude-pattern>

	<rule ref="NetCommons.Files.LineLength">
		<properties>
			<property name="lineLimit" value="100"/>
			<property name="absoluteLineLimit" value="120"/>
		</properties>

		<exclude-pattern>*/Test/*</exclude-pattern>
		<exclude-pattern>*\.ctp</exclude-pattern>
		<exclude-pattern>*/Config/Migration/*</exclude-pattern>
		<exclude-pattern>*/Config/Schema/*</exclude-pattern>
	</rule>
</ruleset>
